{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/SciMusPackageManifest",
    "definitions": {
        "SciMusPackageManifest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "short_name": {
                    "type": "string"
                },
                "aspect_ratio": {
                    "type": "string",
                    "enum": ["16:9", "9:16"]
                },
                "styles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "name": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "version": {
                    "type": "integer"
                },
                "main": {
                    "type": "string"
                },
                "requirements": {
                    "$ref": "#/definitions/Requirements"
                },
                "content": {
                    "$ref": "#/definitions/SciMusPackageManifestContent"
                }
            },
            "required": [
                "content",
                "label",
                "main",
                "name",
                "requirements",
                "short_name",
                "version"
            ],
            "title": "SciMusPackageManifest"
        },
        "SciMusPackageManifestContent": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "titles": {
                    "$ref": "#/definitions/Titles"
                },
                "contents": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ContentElement"
                    }
                }
            },
            "required": [
                "contents",
                "titles"
            ],
            "title": "SciMusPackageManifestContent"
        },
        "ContentElement": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "articleID": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["video", "mixed"]
                },
                "title": {
                    "type": "string",
                    "maxLength": 72
                },
                "titleImage": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/VideoAssetClass"
                        },
                        {
                            "$ref": "#/definitions/ImageAssetClass"
                        }
                    ]
                },
                "subpages": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Subpage"
                    }
                },
                "asset": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/VideoAssetClass"
                        },
                        {
                            "$ref": "#/definitions/ImageAssetClass"
                        }
                    ]
                }
            },
            "required": [
                "articleID",
                "title",
                "titleImage",
                "type"
            ],
            "title": "ContentElement"
        },
        "Subpage": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "pageID": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": ["textImage", "title", "video", "image", "textVideo", "textAudio"]
                },
                "asset": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/VideoAssetClass"
                        },
                        {
                            "$ref": "#/definitions/ImageAssetClass"
                        }
                    ]
                },
                "audio": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/AudioAssetClass"
                        }
                    ]
                },
                "title": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 0
                },
                "subtitle": {
                    "type": "string"
                },
                "layout": {
                    "type": "string",
                    "enum": ["left", "right"]
                },
                "content": {
                    "$ref": "#/definitions/ContentUnion"
                }
            },
            "required": [
                "asset",
                "pageID",
                "title",
                "type"
            ],
            "title": "Subpage"
        },
        "AudioAssetClass": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "assetSource": {
                    "type": "string"
                },
                "assetType": {
                    "type": "string",
                    "enum": ["audio"]
                },
                "soundTitle": {
                    "type": "string"
                },
                "transcript": {
                    "type": "string"
                }
            },
            "required": [
                "assetType",
                "assetSource"
            ],
            "title": "ImageClass"
        },
        "ImageAssetClass": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "assetSource": {
                    "type": "string"
                },
                "assetType": {
                    "type": "string",
                    "enum": ["image"]
                },
                "boundingBox": {
                    "$ref": "#/definitions/BoundingBox"
                },
                "nameText": {
                    "type": "string"
                },
                "sourceText": {
                    "type": "string"
                }
            },
            "required": [
                "assetType",
                "assetSource"
            ],
            "title": "ImageClass"
        },
        "VideoAssetClass": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "assetSource": {
                    "type": "string"
                },
                "assetType": {
                    "type": "string",
                    "enum": ["video"]
                },
                "nameText": {
                    "type": "string"
                },
                "sourceText": {
                    "type": "string"
                },
                "bslSource": {
                    "type": "string"
                },
                "subtitlesSource": {
                    "type": "string"
                },
                "posterImage": {
                    "type": "string"
                }
            },
            "required": [
                "assetType",
                "assetSource"
            ],
            "title": "ImageClass"
        },
        "Titles": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["text", "image"]
                },
                "galleryName": {
                    "type": "string"
                },
                "title": {
                    "type": "string",
                    "maxLength": 72
                },
                "image": {
                    "oneOf": [{
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/VideoAssetClass",
                        },
                        {
                            "$ref": "#/definitions/ImageAssetClass",
                        }
                    ]
                },
                "attractor": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/VideoAssetClass"
                        },
                        {
                            "$ref": "#/definitions/ImageAssetClass"
                        }
                    ]
                },
                "idleTimeout": {
                    "type": "integer"
                }
            },
            "required": [
                "galleryName",
                "title",
                "type",
                "attractor"
            ],
            "title": "Titles"
        },
        "Requirements": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "client_version": {
                    "type": "string"
                }
            },
            "required": [
                "client_version"
            ],
            "title": "Requirements"
        },
        "ImageUnion": {
            "anyOf": [{
                    "$ref": "#/definitions/VideoAssetClass"
                },
                {
                    "$ref": "#/definitions/ImageAssetClass"
                },
                {
                    "type": "string"
                },
                {
                    "type": "null"
                }
            ],
            "title": "ImageUnion"
        },
        "ContentUnion": {
            "anyOf": [{
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "BoundingBox": {
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                }
            }
        }
    }
}
